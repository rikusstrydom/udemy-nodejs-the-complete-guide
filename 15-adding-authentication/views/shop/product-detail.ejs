<%- include('../includes/head.ejs') %>
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>
      <main class="centered">
        <h1>
          <%= product.title %>
        </h1>
        <hr>
        <div>
          <img src="<%= product.imageUrl %>" alt="<%= product.title %>" style="max-height: 300px;">
        </div>
        <h2>
          Price: <%= product.price %>
        </h2>
        <p>
          Description: <%= product.description %>
        </p>
        <% if(isAuthenticated) { %>
          <%- include('../includes/add-to-cart.ejs', {product}) %>
            <% } %>
      </main>
      <%- include('../includes/end.ejs') %>